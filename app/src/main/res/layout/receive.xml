<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/Timegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:fontFamily="@font/rubikmedium"
        android:background="@drawable/backgroundmsg"
        android:backgroundTint="#d3d3d3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Timegroup"
        >
   <LinearLayout
       android:id="@+id/receivemessagelayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingLeft="8dp"
       android:paddingTop="7dp"
       android:paddingRight="8dp"
       android:paddingBottom="3dp"
       android:background="@drawable/backgroundmsgreceive"
       android:backgroundTint="@color/white"
       android:layout_marginRight="10dp"
       android:layout_marginTop="2dp"
       android:layout_marginLeft="8dp"
       android:layout_marginBottom="2dp"
  >
       <TextView
           android:id="@+id/Receive"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxWidth="280dp"
           android:minWidth="100dp"
           android:text="fjadkfj"
           android:layout_marginRight="3dp"
           android:layout_marginBottom="2dp"
           android:textSize="17sp"
           android:fontFamily="@font/rubik"
           android:textColor="@color/textgrey"
           android:textAlignment="textStart"
           />
       <TextView
           android:id="@+id/timestamp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="12:30 PM"
           android:textSize="11dp"
           android:textColor="#938C8C"
           android:fontFamily="@font/rubik"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_gravity="end"
           android:layout_marginTop="1dp"/>

   </LinearLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="30dp"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>